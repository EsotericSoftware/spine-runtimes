{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-v4",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "args": [
                "-j",
                "16",
                "target=editor",
                "dev_build=yes",
                "opengl3=yes",
                "custom_modules=\"${workspaceFolder}/spine_godot\""
            ],
            "problemMatcher": "$msCompile",
            "windows": {
                "args": [
                    "-j",
                    "16",
                    "target=editor",
                    "dev_build=yes",
                    "opengl3=yes",
                    "custom_modules=\"${workspaceFolder}/spine_godot\"",
                    "livepp=${env:LIVEPP}"
                ]
            },
        },
        {
            "label": "build-v3",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "args": [
                "-j",
                "16",
                "target=debug",
                "custom_modules=\"${workspaceFolder}/spine_godot\""
            ],
            "windows": {
                "args": [
                    "-j",
                    "16",
                    "target=debug",
                    "custom_modules=\"${workspaceFolder}/spine_godot\"",
                    "livepp=${env:LIVEPP}"
                ]
            },
            "problemMatcher": "$msCompile"
        }
    ]
}